{
	"defaultSeverity": "error",
	"extends": ["tslint:recommended", "tslint-config-prettier", "tslint-immutable"],
	"linterOptions": {
		"exclude": ["coverage/**", "node_modules/**", "test-reports/**", "**/*.{js,jsx}"]
	},
	"jsRules": {},
	"rules": {
		"align": false,
		"arrow-parens": true,
		"arrow-return-shorthand": true,
		"ban-comma-operator": true,
		"curly": true,
		"eofline": true,
		"member-access": true,
		"max-classes-per-file": false,
		"max-file-line-count": [true, 500],
		"max-line-length": [true, 100],
		"newline-before-return": true,
		"no-array-mutation": true,
		"no-boolean-literal-compare": true,
		"no-conditional-assignment": true,
		"no-consecutive-blank-lines": true,
		"no-console": true,
		"no-debugger": true,
		"no-delete": true,
		"no-empty": true,
		"no-import-side-effect": true,
		"no-let": true,
		"no-loop-statement": true,
		"no-magic-numbers": true,
		"no-method-signature": true,
		"no-object-mutation": [true, { "ignore-prefix": "this" }],
		"no-shadowed-variable": true,
		"no-string-throw": true,
		"no-var-keyword": true,
		"object-literal-sort-keys": false,
		"prefer-object-spread": true,
		"radix": false,
		"semicolon": [true, "always"],
		"switch-default": true,
		"switch-final-break": true,
		"trailing-comma": false,
		"triple-equals": true,
		"variable-name": [true, "allow-pascal-case", "allow-snake-case"]
	},
	"rulesDirectory": []
}
